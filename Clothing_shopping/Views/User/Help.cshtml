<div id="mapModal" class="map-modal">
    <div class="map-modal-content">
        <span class="close-btn">&times;</span>
        <h4 style="margin-top: 0; margin-bottom: 15px; text-align: center; color: #333;">
            Cửa hàng chính - Thị Trấn Cồn
        </h4>
        <div class="map-container">
            <iframe src="https://maps.google.com/maps?q=Thị%20Trấn%20Cồn,%20Hải%20Hậu,%20Nam%20Định&t=&z=15&ie=UTF8&iwloc=&output=embed"
                    width="100%"
                    height="400"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        // 1. Lấy các phần tử
        var modal = document.getElementById("mapModal");
        var btnOpenMap = document.querySelector(".btn-outline-light .fa-map-marker-alt").closest("span"); // Tìm nút bấm
        var spanClose = document.getElementsByClassName("close-btn")[0];

        // 2. Khi click vào nút Icon -> Hiện Modal
        btnOpenMap.onclick = function() {
            modal.style.display = "block";
        }

        // 3. Khi click vào nút X (Đóng) -> Ẩn Modal
        spanClose.onclick = function() {
            modal.style.display = "none";
        }

        // 4. Khi click ra ngoài vùng bản đồ (nền đen) -> Cũng ẩn Modal
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
}