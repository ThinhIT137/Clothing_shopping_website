@model Clothing_shopping.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderId;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h1>Chi tiết đơn hàng <span class="text-primary">#@Model.OrderId</span></h1>
        <div>
            <a asp-action="ListOrderPending" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-light fw-bold">
                    <i class="fas fa-box me-1"></i> Danh sách sản phẩm
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Đơn giá</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    // Xử lý lấy ảnh đại diện
                                    string imgSrc = "/images/no-image.png";
                                    if (item.ProductVariant?.Product?.Images != null)
                                    {
                                        try
                                        {
                                            var imgs = Newtonsoft.Json.JsonConvert.DeserializeObject<List<string>>(item.ProductVariant.Product.Images);
                                            if (imgs != null && imgs.Any()) imgSrc = imgs[0];
                                        }
                                        catch { }
                                    }

                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@imgSrc" alt="Product" class="rounded border me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                <div>
                                                    <div class="fw-bold text-dark">@(item.ProductVariant?.Product?.Name ?? "Sản phẩm không tồn tại")</div>
                                                    <small class="text-muted">
                                                        Màu: @(item.ProductVariant?.Color ?? "?") |
                                                        Size: @(item.ProductVariant?.Size ?? "?")
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">@string.Format("{0:N0} ₫", item.UnitPrice)</td>
                                        <td class="text-center">x @item.Quantity</td>
                                        <td class="text-end fw-bold text-primary">
                                            @string.Format("{0:N0} ₫", item.TotalMoney)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                    <td class="text-end fw-bold text-danger fs-5">
                                        @string.Format("{0:N0} ₫", Model.TotalAmount)
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-user me-1"></i> Thông tin khách hàng
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Họ tên / Người nhận</label>
                        <div class="fw-bold">@Model.ShippingAddress</div>
                    </div>
                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Số điện thoại</label>
                        <div>@Model.Phone</div>
                    </div>
                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Email</label>
                        <div>@(Model.Email ?? "Không có")</div>
                    </div>
                    <div class="mb-3">
                        <label class="small text-muted fw-bold">Địa chỉ giao hàng</label>
                        <div>@Model.ShippingAddress</div>
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <i class="fas fa-info-circle me-1"></i> Trạng thái đơn hàng
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Ngày đặt hàng:</span>
                        <span class="fw-bold">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Trạng thái hiện tại:</span>
                        @if (Model.OrderStatus == "Pending")
                        {
                            <span class="badge bg-warning text-dark fs-6">Chờ xác nhận</span>
                        }
                        else if (Model.OrderStatus == "Packing")
                        {
                            <span class="badge bg-primary fs-6">Đang đóng gói</span>
                        }
                        else if (Model.OrderStatus == "Shipping")
                        {
                            <span class="badge bg-info text-dark fs-6">Đang giao hàng</span>
                        }
                        else if (Model.OrderStatus == "Completed")
                        {
                            <span class="badge bg-success fs-6">Hoàn thành</span>
                        }
                        else if (Model.OrderStatus == "Cancelled")
                        {
                            <span class="badge bg-danger fs-6">Đã hủy</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary fs-6">@Model.OrderStatus</span>
                        }
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        @if (Model.OrderStatus == "Pending")
                        {
                            <a asp-action="ConfirmOrder" asp-route-id="@Model.OrderId" class="btn btn-success" onclick="return confirm('Xác nhận đơn hàng này?')">
                                <i class="fas fa-check"></i> Xác nhận đơn hàng
                            </a>
                            <a asp-action="CancelOrder" asp-route-id="@Model.OrderId" class="btn btn-outline-danger" onclick="return confirm('Hủy đơn hàng này?')">
                                <i class="fas fa-times"></i> Hủy đơn
                            </a>
                        }
                        else if (Model.OrderStatus == "Packing")
                        {
                            <button class="btn btn-secondary" disabled>Đơn đã được duyệt</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>