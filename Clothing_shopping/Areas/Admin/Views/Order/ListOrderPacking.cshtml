@model IEnumerable<Clothing_shopping.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng đang đóng gói";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Đóng gói</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Đang đóng gói</li>
    </ol>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-box-open me-1"></i>
            Danh sách đơn đang đóng gói
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Cập nhật lúc</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">#@item.OrderId</td>
                                <td>
                                    <div>@item.ShippingAddress</div>
                                    <small class="text-muted">@item.Phone</small>
                                </td>
                                <td class="text-danger fw-bold">
                                    @string.Format("{0:N0} ₫", item.TotalAmount)
                                </td>
                                <td>
                                    @item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <span class="badge bg-primary">Đang đóng gói</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="OrderDetails" asp-route-id="@item.OrderId" class="btn btn-sm btn-info text-white" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <a asp-action="StartShipping" asp-route-id="@item.OrderId" class="btn btn-sm btn-warning text-dark"
                                       title="Bàn giao cho Shipper"
                                       onclick="return confirm('Đã đóng gói xong đơn #@item.OrderId? Bắt đầu giao hàng?')">
                                        <i class="fas fa-truck"></i> Giao hàng
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-primary text-center">
                    Hiện không có đơn hàng nào đang đóng gói.
                    <br />
                    <small>Hãy vào mục "Chờ xác nhận" để duyệt thêm đơn mới.</small>
                </div>
            }
        </div>
    </div>
</div>