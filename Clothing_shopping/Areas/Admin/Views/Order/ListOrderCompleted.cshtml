@model IEnumerable<Clothing_shopping.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng đã hoàn thành";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    // Tính tổng doanh thu của trang hiện tại (cho vui mắt)
    decimal totalRevenue = Model != null ? Model.Sum(x => x.TotalAmount) : 0;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Lịch sử đơn hàng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Đã hoàn thành</li>
    </ol>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="small">Tổng đơn hoàn thành</div>
                    <div class="fs-4 fw-bold">@Model.Count() đơn</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="small">Tổng doanh thu (trang này)</div>
                    <div class="fs-4 fw-bold">@string.Format("{0:N0} ₫", totalRevenue)</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-success text-white">
            <i class="fas fa-check-circle me-1"></i>
            Danh sách đơn hàng thành công
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-bordered" id="datatablesSimple">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Tổng tiền</th>
                            <th>Ngày hoàn thành</th>
                            <th>Trạng thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">#@item.OrderId</td>
                                <td>
                                    <div>@item.ShippingAddress</div>
                                    <small class="text-muted">@item.Phone</small>
                                </td>
                                <td class="text-success fw-bold">
                                    @string.Format("{0:N0} ₫", item.TotalAmount)
                                </td>
                                <td>
                                    @item.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <span class="badge bg-success">Hoàn thành</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="OrderDetails" asp-route-id="@item.OrderId" class="btn btn-sm btn-secondary" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>

                                    <button class="btn btn-sm btn-outline-dark" onclick="alert('Chức năng in hóa đơn cho đơn #@item.OrderId đang phát triển!')">
                                        <i class="fas fa-print"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-success text-center">
                    Chưa có đơn hàng nào hoàn thành. Cố gắng bán hàng nhé!
                </div>
            }
        </div>
    </div>
</div>